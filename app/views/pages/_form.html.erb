<table class="table table-striped">
   <tr>
      <td ><b><%= f.label(:subject_id, "Subject")%> :</b></td><td><%= f.select(:subject_id, @subjects.collect { |s| [s.name, s.id]}) %></td>
   </tr>
   <tr>
      <td ><%= f.label(:name)%> :</b></td><td><%= f.text_field(:name) %></td>
   </tr>
   <tr>
      <td ><b><%= f.label(:permalink)%> :</b></td><td><%= f.text_field(:permalink) %></td>
   </tr>
   <tr>
      <td ><b><%= f.label(:position)%> :</b></td><td><%= f.select(:position, 1..@page_count) %></td>
   </tr>
   <tr>
     <td><b><%= f.label(:visible)%> :</b></td><td><%= f.check_box(:visible) %></td>
   </tr>
</table>
