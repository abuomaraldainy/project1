<% @page_title = "New Page" %>
<% @panel_header = "Create New Page" %> 
<div class="row"> 
    <div class="col-lg-12">
      <%= link_to("<<< Go To List", {:action => 'index',:subject_id => @subject.id }, :class => "") %> 
    </div>
</div>
<div class="row">
   <%= error_message_for(@page) %>
   <div class="col-lg-4"></div>
   <div class="col-lg-4">
      <%= form_for(:page, :url => {:action => 'create', :id => @page.id, :subject_id => @subject.id }) do |f| %>
         <%= render(:partial => "form", :locals => {:f => f}) %>
         <div class="col-sm-offset-4"> 
            <%= submit_tag('Create New Page',:class => 'btn btn-default')%> 
         </div>
      <% end %> 
   </div>
   <div class="col-lg-4"> 
   </div>
</div>


