<!DOCTYPE html>
<html>
	 <head>
	   <title>Simple Cms | <%= @page_title || "admin" %></title>
	  <%= stylesheet_link_tag('application', :media => 'all') %>
	  <%= javascript_include_tag('application') %>
	 </head>
	 <body>
        <nav class="navbar navbar-default navbar-static-top" style="margin-bottom: 0">
		    <div class="navbar-header col-lg-offset-5 ">
	            <h3 class="text-white">SIMPLE CMS</h3>
		    </div>
		    <div class="home-and-logout">
			    <%= link_to("Home", {:controller => "access", :action => 'index'}, :class => "home") %>
	            <% if session[:user_id] %>
	               		<%= link_to("Logout", {:controller => "access",:action => 'logout'}, :class => "logout") %>
	               		<p class="username btn-primary"><%= "#{session[:username]}" %></p>
	            <% end %>
		    </div>   
		</nav>
      
		<% if !flash[:notice].blank? %>
		     <br/>
		     <div class="alert alert-info" id="alert"> <%= flash[:notice]%></div>
		<% end %>
		<br/>
		<div class="container">
		    <div class="row">
			    <div class="col-lg-12">
			        <div class="panel panel-success">
			          <div class="panel-heading text-center">
			             <h3><%= @panel_header %></h3> 
			          </div><!-- /.panel-heading -->
			            <div class="panel-body">
							<%= yield %>  
						</div><!-- /.panel-body -->
                    </div><!-- /.panel -->
                </div>
            </div>       
		</div> 
	</body>

	<div class="panel-footer navbar-fixed-bottom text-center"> @ All copies are reserved at clickapps company</div>
</html>