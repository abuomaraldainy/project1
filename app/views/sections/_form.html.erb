<table class="table table-striped ">
   <tr>
      <td ><b><%= f.label(:page_id, "Page")%> :</b></td><td><%= f.select(:page_id, @pages.map { |p| [p.name, p.id]}) %></td>
   </tr>
   <tr>
      <td ><b><%= f.label(:name)%> :</b></td><td><%= f.text_field(:name) %></td>
   </tr>
   <tr>
       <td ><b><%= f.label(:position)%> :</b></td><td><%= f.select(:position, 1..@section_count) %></td>
   </tr>
   <tr>
       <td><b><%= f.label(:visible)%> :</b></td><td><%= f.check_box(:visible) %></td>
   </tr>
   <tr>
      <td ><%= f.label(:content_type)%> :</b></td><td>
        <%= f.radio_button(:content_type, "text") %> TEXT
        <%= f.radio_button(:content_type, "html") %> HTML
      </td>
   </tr>
   <tr>
      <td ><b><%= f.label(:content)%> :</b></td><td><%= f.text_area(:content, :size => '40x5') %></td>
   </tr>
</table> 