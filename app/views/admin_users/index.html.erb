<% @page_title = "Admin Users" %>
<% @panel_header = "List Of All Admin Users" %>
<% if !@admin_users.blank? %> 
  <table class="table table-striped table-bordered">
    <tr class="info" >
      <th>ID </th>
      <th>First Name </th>
      <th>Last Name </th>
      <th>User Name</th>
      <th>Email </th>
      <th class="text-center">Action</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr class="<%= cycle('default' ,'danger')%>">
      <td ><%= admin_user.id %></td>
      <td ><%= admin_user.first_name %></td>
      <td ><%= admin_user.last_name %></td>
      <td ><%= admin_user.username %></td>
      <td ><%= admin_user.email %></td>
      <td class="text-center"> 
          <%= link_to('Edit',{:action => 'edit' , :id => admin_user.id}, :class => 'btn btn-primary btn-sm') %> 
          <%= link_to('Delete',{:action => 'delete' , :id => admin_user.id}, :class => 'btn btn-danger btn-sm') %> 
          <%= link_to("New Admin User", {:action => 'new'}, :class => "btn btn-default") %>
      </td>
    </tr>
    <% end %>
  </table>
<% else %>
  <div class="row"> 
      <div class="col-lg-4"></div>
      <div class="col-lg-4">
        <p class="alert alert-warning"> You do not have any Admin Users added yet.<br/>Click New Admin User button to add one  </p>
        <%= link_to("New Admin User", {:action => 'new'}, :class => "btn btn-default") %>
      </div>
      <div class="col-lg-4"></div>
  </div>
  
<% end %>
